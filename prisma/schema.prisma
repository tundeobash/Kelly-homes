// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  emailVerified DateTime?
  image         String?
  password      String        // Hashed password
  budgetMin     Float?
  budgetMax     Float?
  preferredStyles String[]    @default([]) // Array of style preferences
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  projects      RoomProject[]
  cart          Cart?
  orders        Order[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model RoomProject {
  id          String   @id @default(cuid())
  userId      String
  name        String
  roomType    String   // living room, bedroom, office, etc.
  imageUrl    String   // URL to uploaded room image
  length      Float    // Room dimensions in feet
  width       Float
  height      Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recommendations Recommendation[]
  
  @@index([userId])
}

model FurnitureItem {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  price       Float
  dimensions  Json     // { length, width, height } in feet
  styleTags   String[] @default([]) // Array of style tags
  seller      String   // IKEA, Etsy, Home Center, etc.
  imageUrl    String
  category    String   // sofa, table, chair, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  cartItems   CartItem[]
  orderItems  OrderItem[]
  recommendations RecommendationItem[]
  
  @@index([category])
  @@index([seller])
}

model Designer {
  id          String   @id @default(cuid())
  name        String   @unique
  bio         String?  @db.Text
  style       String   // Modern, Scandinavian, Minimal, etc.
  imageUrl    String?
  curatedSets Json     // Array of furniture item IDs grouped into sets
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Recommendation {
  id          String   @id @default(cuid())
  projectId   String
  type        String   // "complete_look" or "individual"
  designerId  String?  // Optional: if based on designer style
  totalPrice  Float
  createdAt   DateTime @default(now())
  
  project     RoomProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  items       RecommendationItem[]
  
  @@index([projectId])
}

model RecommendationItem {
  id              String   @id @default(cuid())
  recommendationId String
  furnitureItemId String
  positionX       Float?  // Position in room (0-1 normalized)
  positionY       Float?  // Position in room (0-1 normalized)
  rotation        Float?  // Rotation angle in degrees
  
  recommendation  Recommendation @relation(fields: [recommendationId], references: [id], onDelete: Cascade)
  furnitureItem   FurnitureItem  @relation(fields: [furnitureItemId], references: [id])
  
  @@index([recommendationId])
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
}

model CartItem {
  id            String   @id @default(cuid())
  cartId        String
  furnitureItemId String
  quantity      Int      @default(1)
  createdAt     DateTime @default(now())
  
  cart          Cart         @relation(fields: [cartId], references: [id], onDelete: Cascade)
  furnitureItem FurnitureItem @relation(fields: [furnitureItemId], references: [id])
  
  @@unique([cartId, furnitureItemId])
  @@index([cartId])
}

model Order {
  id          String   @id @default(cuid())
  userId      String
  totalAmount Float
  status      String   @default("pending") // pending, completed, cancelled
  commission  Float?   // Commission amount (for future seller API integration)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       OrderItem[]
  
  @@index([userId])
}

model OrderItem {
  id            String   @id @default(cuid())
  orderId       String
  furnitureItemId String
  quantity      Int
  price         Float    // Price at time of purchase
  commission    Float?   // Commission for this item
  
  order         Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  furnitureItem FurnitureItem @relation(fields: [furnitureItemId], references: [id])
  
  @@index([orderId])
}

